@{
    ViewBag.Title = "Home Page";
}

    <div class="container">
      
        <div id="myCarousel" class="carousel slide" data-ride="carousel">
            <!-- Indicators -->
            <ol class="carousel-indicators">
                <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                <li data-target="#myCarousel" data-slide-to="1"></li>
                <li data-target="#myCarousel" data-slide-to="2"></li>
            </ol>

            <!-- Wrapper for slides -->
            <div class="carousel-inner">
                <div class="item active">
                    <img src="https://picjumbo.com/wp-content/uploads/man-wearing-blue-blazer-on-business-meeting-1080x720.jpg" alt="Business Man 1" style="width:100%;">
                    <div class="carousel-caption">
                        <h2>Business Consulting</h2>
                        <p>Together we transform the business from the people to the process.</p>
                    </div>
                    </div>

                <div class="item">
                    <img src="https://picjumbo.com/wp-content/uploads/business-office-building-1080x720.jpg" alt="Business Man 1" style="width:100%;">
                    <div class="carousel-caption">
                        <h2>Technology Services</h2>
                        <p>Together we plan, build and deliver technology to solve problems.</p>
                    </div>
                    </div>

                <div class="item">
                    <img src="https://picjumbo.com/wp-content/uploads/young-woman-holding-smartphone-in-hands-1080x720.jpg" alt="Facebook guy" style="width:100%;">
                    <div class="carousel-caption">
                        <h2>Digital Solutions</h2>
                        <p>Together we define your digital strategy and make marketing work.</p>
                    </div>
                </div>

            <!-- Left and right controls -->
            <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="right carousel-control" href="#myCarousel" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
        

